@model IEnumerable<Lab01_EDI.Models.Jugador>

@{
    ViewData["Title"] = "Upload";
}

<h1>Cargar Datos</h1>
<center><p class="h4">Jugadores</p></center>
<p></p>

<form asp-controller="Home" asp-action="Upload" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="formFile" class="form-label">Seleccione archivo csv.</label>
        <input class="form-control" type="file" name="file" id="formfile">
    </div>
    <center> <button type="submit" class="btn btn-outline-primary">Subir</button> </center>
</form>

<div>
    <a asp-action="Add">Añadir Jugador...</a>
</div>


@if (Singleton.Instance.listaDoble.contador > 0)
{
    <p> Vista Previa archivo: </p>

    <p>
        <table class="table" cellpadding="0" cellspacing="0">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Apellido)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Posicion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Salario)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Club)
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Singleton.Instance.listaDoble.contador; i++)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => Singleton.Instance.listaDoble.ObtenerValor(i).Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Singleton.Instance.listaDoble.ObtenerValor(i).Apellido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Singleton.Instance.listaDoble.ObtenerValor(i).Posicion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Singleton.Instance.listaDoble.ObtenerValor(i).Salario)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Singleton.Instance.listaDoble.ObtenerValor(i).Club)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </p>

    //Debe dirigise a la vista Search
    <div class="d-grid gap-2">
        <center>
            <button class="btn btn-primary" onclick="location.href='@Url.Action("Search", "Home")'" input name="option" type="button">Buscar jugador</button>
        </center>
    </div>


    <div>
        <a asp-action="Index">Regresar</a>
    </div>
}

